<h3>Formualire de modification de formulaire</h3>
<form method="post" action="/modifyUser">
    <input type="text" name="name" placeholder="Votre Nom" value="<%= user['name']%>"/>
    <input type="text" name="type" placeholder="Votre statut" value="<%= user['type']%>"/>
    <input type="number" name="age" placeholder="Votre age" value="<%= user['age']%>"/>
    <input type="submit" value="Envoyer"/>
</form>

<% if(typeof message !== 'undefined'){%>
    <p><%=message%></p>
<% } %>